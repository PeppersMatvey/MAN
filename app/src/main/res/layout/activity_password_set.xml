<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Password_Set">
    <TextView
        android:id="@+id/non_pass"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginVertical="5dp"
        android:background="#4D00FAF2"
        android:gravity="center"
        android:text="Не использовать пароль"
        android:textSize="25sp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:text="Задайте пароль для входа в приложение"/>
    <TextView
        android:id="@+id/text_input_password_set"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/silver"
        android:layout_height="wrap_content"
        android:textColor="@color/silverText"
        android:text="@string/pin"/>
    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/is_password_correct_view_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/k1_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="1"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:id="@+id/k2_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:text="2"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:id="@+id/k3_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:text="3"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/k4_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="4"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:id="@+id/k5_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:text="5"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:id="@+id/k6_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:text="6"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/k7_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="7"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:id="@+id/k8_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:text="8"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:id="@+id/k9_set"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:text="9"
                    android:background="@color/seri"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/k0_set"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="2"
                    android:background="@color/seri"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="25sp"></TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="300dp">
            <TextView
                android:id="@+id/k_delete_set"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:textSize="25sp"
                android:gravity="center"
                android:text="delete"
                android:background="@color/seri"
                android:layout_margin="5dp"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:id="@+id/k_enter_set"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="center"
                android:text="enter"
                android:background="@color/seri"
                android:layout_margin="5dp"
                android:layout_height="match_parent"></TextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>