<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_settings"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/orange"
                android:gravity="center_vertical"
                android:onClick="exit_app"
                android:paddingHorizontal="10dp"
                android:text="Выход"
                android:textColor="@color/white"
                android:textSize="22sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text=""
                android:textSize="22sp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/orange"
                android:orientation="horizontal">
                <ImageView
                    android:paddingLeft="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/baseline_lock_person_24"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/white"
                    android:text="Настройки конфиденциальности"
                    android:gravity="center"
                    android:textSize="18sp"></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/set_password_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/buttonProzr"
                android:text="Изменить пароль"
                android:onClick="set_password"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>
            <TextView
                android:id="@+id/set_password_mode_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/buttonProzr"
                android:text="Отключить пароль"
                android:onClick="set_password_mode"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="22sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/orange"
                android:orientation="horizontal">
                <ImageView
                    android:paddingLeft="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/baseline_format_list_bulleted_24"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Настройки зон"
                    android:textSize="18sp"></TextView>
            </LinearLayout>
            <TextView
                android:background="@color/buttonProzr"
                android:id="@+id/import_zone_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Импортировать зону из xml"
                android:onClick="import_zone"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>
            <TextView
                android:id="@+id/add_home_settings"
                android:layout_width="match_parent"
                android:background="@color/buttonProzr"
                android:layout_height="45dp"
                android:text="Добавить дом"
                android:onClick="addHome"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>
            <TextView
                android:id="@+id/import_settings"
                android:layout_width="match_parent"
                android:background="@color/buttonProzr"
                android:layout_height="45dp"
                android:text="Импорт участка"
                android:onClick="importHome"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>
            <TextView
                android:id="@+id/export_settings"
                android:layout_width="match_parent"
                android:background="@color/buttonProzr"
                android:layout_height="45dp"
                android:text="Экспорт участка"
                android:onClick="exportHome"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="22sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/orange"
                android:orientation="horizontal">
                <ImageView
                    android:paddingLeft="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/baseline_volunteer_activism_24"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/white"
                    android:text="Настройки статусов"
                    android:gravity="center"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/add_state_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Добавить статус"
                android:background="@color/buttonProzr"
                android:onClick="add_state"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>
            <TextView
                android:id="@+id/set_state_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Изменить статус"
                android:background="@color/buttonProzr"
                android:onClick="refacteState"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text=""
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="22sp"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/orange"
                    android:orientation="horizontal">
                    <ImageView
                        android:paddingLeft="10dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/twotone_map_24"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Настройки карт"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="18sp"></TextView>
                </LinearLayout>
            <TextView
                android:id="@+id/add_map_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Добавить карту"
                android:background="@color/buttonProzr"
                android:onClick="addMap"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>
            <TextView
                android:id="@+id/set_size_map_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Изменить размер метки и текста"
                android:background="@color/buttonProzr"
                android:onClick="setCursor"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text=""
                android:textSize="22sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/orange"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Другое"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="18sp"></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/exit_terminal_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Зайти в терминал"
                android:background="@color/buttonProzr"
                android:onClick="terminal_input"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text=""
                android:gravity="center"
                android:textSize="22sp"></TextView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>